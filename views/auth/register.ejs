<% layout("layouts/boilerplate") %>

<div class="col-8 offset-2 text-centered d-flex flex-column">
  <h1 class="mt-5">Register</h1>
  <form action="/register" method="post" class="validated-form" novalidate>
    <div class="mb-3">
      <label class="form-label" for="username">Username*</label>
      <input
        class="form-control"
        type="text"
        id="username"
        name="username"
        placeholder="username"
        required
      />
      <div class="valid-feedback">Looks Good!</div>
    </div>

    <div class="row my-3">
      <div class="col-6">
        <label class="form-label" for="firstName">First Name*</label>
        <input
          class="form-control"
          type="text"
          id="firstName"
          name="firstName"
          placeholder="first"
          required
        />
        <div class="valid-feedback">Looks Good!</div>
      </div>
      <div class="col-6">
        <label class="form-label" for="lastName">Last Name*</label>
        <input
          class="form-control"
          type="text"
          id="lastName"
          name="lastName"
          placeholder="last"
          required
        />
        <div class="valid-feedback">Looks Good!</div>
      </div>
    </div>

    <div class="my-3">
      <label class="form-label" for="email">Email</label>
      <input
        class="form-control"
        type="email"
        id="email"
        name="email"
        placeholder="email"
      />
      <div class="valid-feedback">Looks Good!</div>
    </div>
    <div class="my-3">
      <label class="form-label" for="password">Password*</label>
      <input
        class="form-control"
        type="password"
        id="password"
        name="password"
        placeholder="password"
        required
      />
      <div class="valid-feedback">Looks Good!</div>
    </div>
    <button class="btn btn-success">Register</button>
  </form>
</div>
